# Define o estilo de fim de linha como LF (Linux/Unix)
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

# Configuração específica para arquivos JavaScript e JSON
[*.js]
indent_size = 2

[*.json]
indent_size = 2

# Configuração específica para arquivos Python
[*.py]
indent_size = 4

# Configuração específica para arquivos HTML, XML e SVG
[*.html]
indent_size = 2

[*.xml]
indent_size = 2

[*.svg]
indent_size = 2

# Configuração específica para arquivos CSS e SCSS
[*.css]
indent_size = 2

[*.scss]
indent_size = 2
